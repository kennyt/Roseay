<div class="top_header">
  <% if current_user %>
    <%= link_to 'logout', session_path(current_user), method: :delete %>
    <%= "| " %>
    <%= link_to "#{current_user.username}", user_path(current_user) %>
    <%= "| " %>
    <%= "avg(#{current_user.avg})" %>
  <% else %>
    <%= link_to 'login', new_session_path %>
    <%= "| " %>
    <%= link_to 'signup', new_user_path %>
  <% end %>
  <%= "| " %>
  <%= link_to 'submit', new_song_path %>
</div>

<div class="big_header">
  <h1><%= link_to '.dance', root_path %></h1>
</div>

<div class="small_header_index">
  <%= link_to "relevance", songs_path(:by_time => 0) %>
  <%= "| " %>
  <%= link_to "time", songs_path(:by_time => 1) %>
</div>
<ol>
  <%= render @songs %>
</ol>

