
<li class="song">
  <% if current_user %>
    <% if able_to_vote?(song, current_user) %>
      <b><%= link_to '^', upvote_song_path(song), class: 'upvote' %></b>
      &nbsp;
    <% else %>
        <!-- &nbsp;+&nbsp;&nbsp; -->
       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <% end %>
  <% else %>
    <%= link_to '^', new_session_path, class: 'upvote' %>
    &nbsp;
  <% end %>

  <% if song.song_link.split("youtube.com")[1] %>
    <%= link_to " #{song.song_artist} - #{song.song_name}", songs_path(:d => song.song_link.split('watch?v=')[1]) %>
    <span style="font-size: 8px"><%= link_to "src", song.song_link, :target => '_blank' %>
  <% else %>
    <%= link_to " #{song.song_artist} - #{song.song_name}", song.song_link, :target => '_blank' %>
  <% end %>
  <br>
  <div class="info_bar">
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <% if song.points == 1 %>
      <%= "1 point  ~ " %>
    <% else %>
      <%= "#{song.points} points ~ " %>
    <% end %>
    <%= link_to song.author.username, user_path(song.author) %>
    <%= "| " %>
    <%= "#{distance_of_time_in_words(song.created_at-Time.now)} ago" %>
  </div>
</li>
